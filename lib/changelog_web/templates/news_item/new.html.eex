<div class="page_basic">
  <h1>Submit News</h1>

  <%= form_for @changeset, news_item_path(@conn, :create), fn f -> %>
    <div class="form-element_wrap">
      <div class="form-element <%= error_class(f, :url) %>">
        <label>URL<span>*</span></label>
        <%= text_input(f, :url, placeholder: "https://example.com", type: "url", required: true) %>
        <%= error_message(f, :url) %>
      </div>
    </div>

    <div class="form-element_wrap">
      <div class="form-element <%= error_class(f, :headline) %>">
        <label>What is it?<span>*</span></label>
        <%= text_input(f, :headline, placeholder: "Article or project title...", required: true) %>
        <%= error_message(f, :headline) %>
      </div>
    </div>

    <div class="form-element_wrap">
      <div class="form-element <%= error_class(f, :story) %>">
        <label>Why is it interesting?</label>
        <%= textarea(f, :story, placeholder: "What do you think?") %>
        <%= error_message(f, :story) %>
        <p class="form-element-note">Try some Markdown. It *may* work.</p>
      </div>
    </div>

    <div class="form-submit">
      <p class="form-submit-toc"><a href="#guidelines" class="js-toggle_element">View submission guidelines</a></p>
      <div>
        <input value="Submit" type="submit">
        <div class="form_submit_responses"></div>
      </div>
    </div>
  <% end %>

  <div id="guidelines" class="richtext richtext--small is-hidden">
    <hr>
