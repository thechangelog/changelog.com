<table class="ui celled striped table">
  <thead>
    <tr>
      <th>Person</th>
      <th>Email</th>
      <th>Posts</th>
      <th>Episodes</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <%= for person <- @people do %>
    <tr>
      <td>
        <img class="ui avatar image" src="<%= Changelog.PersonView.avatar_url(person) %>">
        <%= person.name %>
        (<%= person.handle %>)
        <%= if person.admin do %>
          <div class="ui tiny blue basic label">Admin</div>
        <% end %>
      </td>
      <td><%= link person.email, to: "mailto:#{person.email}" %></td>
      <td><%= post_count(person) %></td>
      <td><%= episode_count(person) %></td>
      <td class="center aligned">
        <div class="ui small basic buttons">
          <%= link to: person_path(@conn, :show, person.handle), class: "ui button" do %>
            <i class="external icon"></i>
            Public
          <% end %>

          <%= link to: admin_person_path(@conn, :edit, person), class: "ui button" do %>
            <i class="edit icon"></i>
            Edit
          <% end %>

          <%= link to: admin_person_path(@conn, :delete, person), method: :delete, data: [confirm: "Are you sure?"], class: "ui button" do %>
            <i class="trash icon"></i>
            Delete
          <% end %>
        </div>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
